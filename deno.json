{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react-jsx",
    "jsxFactory": "React.createElement",
    "jsxFragmentFactory": "React.Fragment",
    "lib": ["deno.window", "dom", "dom.iterable", "dom.asynciterable"],
    "strict": true
  },
  "lint": {
    "files": {
      "include": ["src/"]
    },
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-unused-vars", "require-await", "no-undef", "no-explicit-any"]
    }
  },
  "fmt": {
    "files": {
      "include": ["src/"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "always"
    }
  },
  "test": {
    "include": ["src/"],
    "exclude": ["node_modules/"]
  },
  "importMap": "import_map.json"
}
