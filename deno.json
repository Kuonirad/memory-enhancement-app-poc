{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react-jsx",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "lib": ["deno.window", "dom", "dom.iterable", "dom.asynciterable"],
    "strict": true
  },
  "lint": {
    "files": {
      "include": ["src/", "src/deno_components/"]
    },
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-unused-vars", "require-await", "no-undef", "no-explicit-any", "ban-ts-comment"]
    }
  },
  "fmt": {
    "files": {
      "include": ["src/", "src/deno_components/"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "always"
    }
  },
  "test": {
    "include": ["src/", "src/deno_components/"],
    "exclude": ["node_modules/"]
  },
  "importMap": "import_map.json",
  "jsx": "react",
  "jsxImportSource": "preact"
}
